<div class='row justify-content-md-center'>
  <div class='col-sm-5 text-center pt-5'>
    <%= link_to 'Find Top Rated Movies', movies_path(search_by_rating: true), method: :post, class:'badge badge-pill badge-primary' %>
  </div>
</div>

<div class='row justify-content-md-center'>
  <div class='col-sm-5 text-center pb-5 pt-5'>
    <h4>OR</h4>
  </div>
</div>

<div class='row justify-content-md-center'>
  <div class='col-sm-5 text-center'>
    <%= form_with url: movies_path, local: true, class:'form-inline' do |f| %>
      <div class='form-group mx-sm-3 mb-2'>
        <%= f.label :movie_title, 'Search by Title', class:'sr-only' %>
        <%= f.text_field :movie_title, class: 'form-control', placeholder: 'Movie Title' %>
      </div>
      <%= f.submit 'Find Movies', class:'btn btn-primary btn-sm mb-2' %>
    <% end %>
  </div>
</div>
